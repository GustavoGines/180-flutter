<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Tema base de toda la app (AppCompat) -->
    <style name="NormalTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Mantén tu fondo de launch si lo usás como background “por detrás” -->
        <item name="android:windowBackground">@drawable/launch_background</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Colores/atributos extra que uses -->
    </style>

    <!-- Tema de la Activity para versiones < 31 (sin Splash API nueva) -->
    <style name="LaunchTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/launch_background</item>
    </style>
</resources>
